<!-- Profile -->
<% const {dataValues:{id,name,birthday,email,picturepath,role,gender}} =user%>
<section class="section_profile" id="margin-menu">
  <div class="profile">
    <div class="profile-row">
      <div class="profile-cart">

        <div class="profile-cart-photo">
          <a href="#pexels-photo">
          <img id="blah" src="/images:<%=picturepath%>">
        </a>
        <a id="pexels-photo" href="#" class="full" style="background-image: url('/images:<%=picturepath%>');"></a>

        </div>
        
        <form enctype="multipart/form-data" method="post" action="/addAvatar">

          <div class="profile-cart-user-load-file">

            <label for="load-file" class="load-file-label">Выберите фото</label>
            <input type="file" name="image" id="load-file" multiple accept="image/*,image/jpeg" onchange="readURL(this);" />
            <button type="submit"><i class='bx bx-upload'></i></button>

          </div>
      </form>

        <div class="profile-cart-user-load-file">
          <label for="load-file" class="load-file-label">Загрузить фото</label>
          <input type="file" name="fileAttach" id="load-file" multiple>
          <button type="submit"><i class='bx bx-cloud-upload'></i></button>
        </div>
        
        <div class="profile-cart-information">
          <div class="profile-cart-user-name">
            <span><%=name%></span>
          </div>

          <div class="profile-cart-user-post">
            <span><%=role%></span>
          </div>

        </div>
      </div>

      <div class="profile-information">
        <div class="profile-information-field">
          <span class="profile-information-field-title">Никнейм</span>
          <input type="text" class="profile-information-field-text" name="userName" value="<%=name%>" readonly>
        </div>
        <%if(isYourProfile){%>
        <div class="profile-information-field">
          <span class="profile-information-field-title">Email</span>
          <input type="text" class="profile-information-field-text" name="userEmail" value="<%=email%>" readonly>
        </div>
        <% } %>


        <div class="profile-information-field">
          <span class="profile-information-field-title">Пол</span>
          
          <select class="profile-information-field-text" name="userPost" value="<%=gender%>" disabled readonly>
            <option selected="true" disabled="disabled"><%=gender%></option>
            <option value="Не знаю">Не знаю</option>
            <option value="Мужской">Мужской</option>
            <option value="Женский">Женский</option>
          </select>
          </div>

        <div class="profile-information-field">
          <span class="profile-information-field-title">Дата рождения</span>
          <input type="date" class="profile-information-field-text" name="userCard" value="<%=birthday%>" readonly>
        </div>
        <%if(isYourProfile){%>
        <div class="profile-information-button">

          <div class="acc_del_btn">
            <a href="/logout">
            <button type="submit">Выйти</button>
            </a>
          </div>

          <input class="profile-information-button-edit" type="submit" value="Редактировать">
          <input class="profile-information-button-save" type="submit" value="Сохранить">
        </div>
        <%}%>
      </div>
    </div>

    <div class="profile-job">
      <%if(isYourProfile){%>
        <h2>Ваши достижения</h2>
        <%}%>
        <%if(!isYourProfile){%>
        <h2>Достижения <%=name%></h2>
        <%}%>
        <%var viewsCount=0%>
        <%var likesCount=0%>
        <%var commCount=0%>
        <%user_post.forEach(({dataValues:{views,post_comments,news_likes}})=>{%>
          <%viewsCount+=views%>
          <%post_comments.forEach(()=>{%>
            <%commCount++%>

         <%})%>

         <%news_likes.forEach(()=>{%>
          <%likesCount++%>
         <%})%>
          <%})%>
      <div class="profile-number-like">
        <span class="profile-job-text">Лайков<i class='bx bx-like'></i></span>

        <input class="profile-job-title" type="text" id="number" value="<%=likesCount%>" required readonly>

      </div>

      <div class="profile-number-view">
        <span class="profile-job-text">Просмотров<i class='bx bx-show'></i></span>
        <input class="profile-job-title" type="text" id="number" value="<%=viewsCount%>" required readonly>
      </div>

      <div class="profile-number-comms">
        <span class="profile-job-text">Комментариев<i class='bx bx-message-square-add'></i></span>
        <input class="profile-job-title" type="text" id="number" value="<%=commCount%>" required readonly>
      </div>
      <div class="next_news_btn">
        <button type="submit">Обновить</button>
      </div>        
    </div>

    <div class="status_prof_comlike">
      <%if(isYourProfile){%>
        <div class="profile_comlike">
          <h2>Ваши действия</h2>
            <span class="text_profile_comlike">Ваши новости<i class='bx bx-news'></i></span>

            <span class="text_profile_comlike">Ваши лайки<i class='bx bx-like'></i></span>
   
            <span class="text_profile_comlike">Ваши комментарии<i class='bx bx-message-square-add'></i></span>

          <div class="next_news_btn">
            <a href="/postAuthor:<%=id%>">
            <button type="submit">Перейти</button>
          </a>
          </div>
          
        </div>
        <%}%>
        <%if(!isYourProfile){%>
          <div class="profile_comlike">
            <h2>Действия <%=name%></h2>
              <span class="text_profile_comlike">Новости<i class='bx bx-news'></i></span>
  
              <span class="text_profile_comlike">Лайки<i class='bx bx-like'></i></span>
     
              <span class="text_profile_comlike">Комментарии<i class='bx bx-message-square-add'></i></span>
  
            <div class="next_news_btn">
              <a href="/postAuthor:<%=id%>">
              <button type="submit">Перейти</button>
            </a>
            </div>
            
          </div>
          <%}%>
    </div>
    
  </div>
  
